<h1>Update Employee</h1>
<form action="/updateEmployee/{{employee._id}}" method="POST">
    <label>First Name:</label>
    <input type="text" name="firstName" value="{{employee.firstName}}" required><br>

    <label>Last Name:</label>
    <input type="text" name="lastName" value="{{employee.lastName}}" required><br>

    <label>Department:</label>
    <select name="department" required>
        <option value="Engineering" {{#if (eq employee.department "Engineering")}}selected{{/if}}>Engineering</option>
        <option value="HR" {{#if (eq employee.department "HR")}}selected{{/if}}>HR</option>
        <option value="IT" {{#if (eq employee.department "IT")}}selected{{/if}}>IT</option>
    </select><br>

    <label>Start Date:</label>
    <input type="date" name="startDate" value="{{employee.startDate}}" required><br>

    <label>Job Title:</label>
    <input type="text" name="jobTitle" value="{{employee.jobTitle}}" required><br>

    <label>Salary:</label>
    <input type="number" name="salary" value="{{employee.salary}}" required><br>

    <button type="submit">Save Changes</button>
</form>
<a href="/">Back to Employee List</a>
