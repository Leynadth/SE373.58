<h1>Update Employee</h1>
<form action="/employees/update/{{employee._id}}" method="POST">
    <label>First Name:</label>
    <input type="text" name="firstName" value="{{employee.firstName}}" required><br>

    <label>Last Name:</label>
    <input type="text" name="lastName" value="{{employee.lastName}}" required><br>

    <label>Department:</label>
    <select name="department" required>
        <option value="Hardware" {{#if (eq employee.department "Hardware")}}selected{{/if}}>Hardware</option>
        <option value="Appliances" {{#if (eq employee.department "Appliances")}}selected{{/if}}>Appliances</option>
        <option value="Cashier" {{#if (eq employee.department "Cashier")}}selected{{/if}}>Cashier</option>
    </select><br>

    <label>Start Date:</label>
    <input type="date" name="startDate" value="{{employee.startDate}}" required><br>

    <label>Job Title:</label>
    <input type="text" name="jobTitle" value="{{employee.jobTitle}}" required><br>

    <label>Salary:</label>
    <input type="number" name="salary" value="{{employee.salary}}" required><br>

    <button type="submit">Save Changes</button>
</form>
<a href="/">Back to Employee List</a>
