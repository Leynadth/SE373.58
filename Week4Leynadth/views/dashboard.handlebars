<h2>Welcome, {{user.name}}</h2>
<a href="/logout">Logout</a>

<h3>Employee List</h3>
<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Department</th>
        <th>Start Date</th>
        <th>Job Title</th>
        <th>Salary</th>
        <th>Actions</th>
    </tr>
    {{#each employees}}
    <tr>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.department}}</td>
        <td>{{this.startDate}}</td>
        <td>{{this.jobTitle}}</td>
        <td>{{this.salary}}</td>
        <td>
            <a href="/updateemployee/{{this._id}}">Edit</a>
            <a href="/deleteemployee/{{this._id}}">Delete</a>
        </td>
    </tr>
    {{/each}}
</table>
